<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 玩家信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_person"
                android:contentDescription="@string/player_avatar"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="玩家名称"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待中"
                android:textSize="10sp"
                android:textStyle="bold"
                android:padding="4dp"
                android:background="@drawable/bg_status_badge"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- 筹码和下注信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_chips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="筹码: 1000"
                android:textSize="12sp"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tv_bet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下注: 0"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:gravity="end" />

        </LinearLayout>

        <!-- 卡牌区域 -->
        <LinearLayout
            android:id="@+id/ll_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.example.texasholdem.views.CardView
                android:id="@+id/card_1"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_margin="2dp" />

            <com.example.texasholdem.views.CardView
                android:id="@+id/card_2"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_margin="2dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 